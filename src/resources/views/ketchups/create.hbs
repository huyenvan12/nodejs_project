<div class="mt-4">
    <h3>News Posting</h3>

    <form method="POST" action="/ketch-ups/store">
        <div class="form-group">
            <label for="from">From Person</label>
            <input type="text" name="from" class="form-control" id="from" placeholder="Enter name">
        </div>
        <div class="form-group">
            <label for="title">News Title</label>
            <input type="text" name="title" class="form-control" id="title" placeholder="Enter title">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea name="description" class="form-control" id="description">
            </textarea>
            {{!-- <textarea name="" id="" cols="30" rows="10"></textarea> --}}
        </div>
        <div class="form-group">
            <label for="image">Image Link</label>
            <input type="text" class="form-control" name="image" id="image" placeholder="Enter image link">
        </div>
        <div class="form-group">
            <label for="full_des">Status</label>
            <textarea name="status" class="form-control" id="full_des" rows="5">
            </textarea>
        </div>

        <button type="submit" class="btn btn-primary">Post</button>
    </form>

    <hr style="background-color: #EEA243; border: 1px solid #EEA243;">
</div>