<div class="mt-4">
    <h3>News Editing</h3>

    <form class="mt-4" method="POST" action="/ketch-ups/{{news._id}}?_method=PUT">
        <div class="form-group">
            <label for="from">From Person</label>
            <input type="text" name="from" class="form-control" value="{{news.from}}" id="from"
                placeholder="Enter name">
        </div>
        <div class="form-group">
            <label for="title">News Title</label>
            <input type="text" name="title" class="form-control" value="{{news.title}}" id="title"
                placeholder="Enter title">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea name="description" class="form-control" id="description"
                placeholder="Enter description">{{news.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="image">Image Link</label>
            <input type="text" class="form-control" name="image" value="{{news.image}}" id="image"
                placeholder="Enter image link">
        </div>
        <div class="form-group">
            <label for="full_des">Status</label>
            <textarea name="full_des" class="form-control" id="full_des" rows="5"
                placeholder="Enter your status">{{news.full_des}}</textarea>
        </div>

        <button type="submit" class="btn btn-outline-success">Save</button>
    </form>

    <hr style="background-color: #EEA243; border: 1px solid #EEA243;">
</div>